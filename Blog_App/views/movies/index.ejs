<div class="container">
    <h2>Movie List</h2><hr>
    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#addMovieModal">Add Movie</button>
</div>

<div class="data-table" style="text-align: center">
    <table border="1" cellpadding="7" cellspacing="7" align="center">
        <tr>
            <th width="50px">ID</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Description</th>
            <th width="50%">Action</th>
        </tr>     
        
       <% _.each(allMovies, function (movies) { %>
        <tr>
            <th><%= movies.id %></th>
            <th><%= movies.title %></th>
            <th><%= movies.genre %></th>
            <th><%= movies.description %></th>
            <th>
                <a href="/movies/find/<%= movies.id %>">Details</a> | 
                <a href="/movies/destroy/<%= movies.id %>" class="button">Delete</a>
            </th>
        </tr>
       <% }) %>
    </table>
</div> 

    

<!-- Add Movie Modal -->
<div class="modal fade" id="addMovieModal" tabindex="-1" role="dialog" aria-labelledby="addMovieModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addMovieModalTitle">Movie Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form role="form" method="post" action="/movies/index">
                    <div>
                        <div>
                            <input type="text" name="title" class="form-control" placeholder="Title" required autofocus>
                        </div>
                        <div>
                            <input type="text" name="genre" class="form-control" placeholder="Genre" required>
                        </div>
                        <div>
                            <input type="text" name="description" class="form-control" placeholder="Description" required>
                        </div>
                        <br>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>